<% @site ||= Site.new %>

<%=simple_form_for(@site, remote: true, html: {class: 'customize_simple_form',id: 'form_sites'}) do |f| %>

    <div class="form-group">
      <%=f.input :name, input_html: {class: 'form-control col-xs-5'}, placeholder: 'Enter Site'%>
    </div>

    <div class='btn-group pull-right' id='site_btn'>
      <span>
          <%= f.submit 'RESET', class: 'custom btn btn-default', id: 'reset_site' %>
        <%= f.submit 'SAVE' , class: 'custom btn btn-default', id: 'save_site'  %>
      </span>
    </div>
<%end%>

